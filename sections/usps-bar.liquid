    ],
    "max_blocks": 4,
    "blocks": [
        {
            "type": "usp_block",
            "name": "USP Block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "icon",
                    "label": "Icon (HTML or Emoji)"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default": "USP Heading"
                },
                {
                    "type": "text",
                    "id": "description",
                    "label": "Description",
                    "default": "USP Description"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "USPs Bar",
            "category": "Custom",
            "blocks": [
                {
                    "type": "usp_block"
                },
                {
                    "type": "usp_block"
                },
                {
                    "type": "usp_block"
                }
            ]
        }
    ]
}
{% endschema %}
